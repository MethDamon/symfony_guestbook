{% extends 'GuestBookBundle:Default:base_guestbook.html.twig' %} 

{% block post_list %} 

		<table class="table" >
    	<tbody>
    		<thead">
    			<th>Nr.</th>
    			<th>Name</th>
    			<th>Email</th>
    			<th>Text</th>
    			<th></th>
    		</thead>
    		<tbody>
    			{% for post in posts %}
    				<tr>
    					<td> {{ post.id }} </td>
    					<td>{{ post.name }} </td>
    					<td>{{ post.email }} </td>
    					<td>{{ post.text}}</td>
    				
    				
    					<td>
    						<ul style="list-style-type: none;">
    							<li>
    								<form action="{{ path('delete', {'id' : post.id}) }}" method="post">
    								<input type="submit" value="Delete"></input>
    								</form>
    								<form action="{{ path('edit', {'id' : post.id}) }}" method="get">
    								<input type="submit" value="Edit"></input>
    								</form>
    							</li>
    						</ul>
    					</td>
    					
    				</tr>
    			{% endfor %}
    		</tbody>
		</table>
{% endblock %}